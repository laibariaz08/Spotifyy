<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Top Section with Profile Picture and Buttons -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#000000"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_picture"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Picture" /> <!-- Closing tag added -->

        <Button
            android:id="@+id/all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:layout_marginTop="3dp"
            android:backgroundTint="#4CAF50"
            android:text="All"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_button"
            android:layout_marginTop="3dp"
            android:layout_marginRight="23dp"
            android:backgroundTint="#000000"
            android:text="Music"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>


    <!-- "To get you started" Text -->
    <TextView
        android:id="@+id/get_started_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To get you started"
        android:textSize="27sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp"
        android:textStyle="bold" />
    />

    <!-- First Set of Images -->
    <GridLayout
        android:id="@+id/first_image_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/get_started_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- First Image and Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/taylor_swift_mix"
                android:contentDescription="Taylor Swift Mix"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billie Eilish, Ariana\n Grande and Conan Gray"
                android:textColor="#808080"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Second Image and Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:src="@drawable/arijit_singh_mix"
                android:contentDescription="Arijit Singh Mix"
                android:scaleType="centerCrop"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atif Aslam, Vishal Mishra\n and Vishal Shekhar"
                android:textColor="#808080"
                android:textSize="14sp"/>

        </LinearLayout>

    </GridLayout>

    <!-- "Try something else" Text -->
    <TextView
        android:id="@+id/try_something_else_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try something else"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/first_image_grid"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp"
        android:textStyle="bold" />
    />

    <!-- Second Set of Images -->
    <GridLayout
        android:id="@+id/second_image_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/try_something_else_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- First Image and Content in the second section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:src="@drawable/shaadi_hits"
                android:contentDescription="Shaadi Hits"
                android:scaleType="centerCrop"/>


        </LinearLayout>

        <!-- Second Image and Content in the second section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:src="@drawable/desi_pop"
                android:contentDescription="Desi Pop"
                android:scaleType="centerCrop"/>


        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


